{
    "display": {
        "font_name": "Arial Bold",
        "font_size": 28,
        "max_chars": 20,
        "text_color": "white",
        "bg_color": "systemTransparent",
        "opacity": 0.9
    },
    "window": {
        "width": 400,
        "height": 60,
        "padding_x": 10,
